//y = 200
x = 20
y = 20
current_y = y
margin = 10
draw_set_halign(fa_left)
draw_set_font(fTutorial)

if stage == "Controls" {
    if !w_pressed {
        draw_text_and_update_current_y("W: move up")
        if keyboard_check(ord('W')) { w_pressed = true }
    }
    if !s_pressed {
        draw_text_and_update_current_y("S: move down")
        if keyboard_check(ord('S')) { s_pressed = true }
    }
    if !a_pressed {
        draw_text_and_update_current_y("A: move left")
        if keyboard_check(ord('A')) { a_pressed = true }
    }
    if !d_pressed {
        draw_text_and_update_current_y("D: move right")
        if keyboard_check(ord('D')) { d_pressed = true }
    }
    
    if !left_clicked {
        draw_text_and_update_current_y("Left click (mouse 1): shoot heart")
        if mouse_check_button(mb_left) { left_clicked = true }
    }
    if w_pressed &amp;&amp; s_pressed &amp;&amp; a_pressed &amp;&amp; d_pressed &amp;&amp; left_clicked {
        stage = "Swarmers"
        instance_create(random(room_width),0,oSwarmer)
    }
}

if stage == "Swarmers" {
    draw_text_and_update_current_y("Shoot all the horrible eye things")
    if instance_number(oSwarmer) &lt; 1 {
        stage = "Boomers"
        tutorial_boomer = instance_create(random(room_width),0,oBoomer)   
    }   
}

if stage == "Boomers" {
    draw_text_and_update_current_y("The hideous angry things are invincible...")
    draw_text_and_update_current_y("Unless they eat an eye thing.")
    
    if instance_exists(tutorial_boomer) {
        if tutorial_boomer.things_eaten &gt; 0 {
            draw_text_and_update_current_y("Fire bait at an eye thing.")
        } else {
            current_y += 50
            draw_text_and_update_current_y("Shoot the angry thing.")
        }
    } else {
        // We're ready! Show the victory screen!
        oMenu.mode = "Victory"
    }
    
    current_y += 50
    
    if !right_clicked {
        draw_text_and_update_current_y("Right click: fire bait.")
        if mouse_check_button(mb_right) { right_clicked = true }
    }
    
    if instance_number(oSwarmer) &lt; 1 {
        instance_create(random(room_width),0,oSwarmer)
    }
}

