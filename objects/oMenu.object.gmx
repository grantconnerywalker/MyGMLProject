if mode == "Titles" {
    // Centers x and y (place x at half of view in each direction
    x = view_hport[0] / 1.1
    y = 0
    
    current_y = y
    current_x = x
    margin = 10
    
    
    draw_set_halign(fa_center)
    
    draw_set_font(fTitle)
    draw_text_and_update_current_y("NOXP")
    
    draw_set_font(fMenu)
    draw_text_and_update_current_y("A game made for a tutorial.")
    
    current_y += 50
    
    if button_pressed("New Game") {
        mode = "Game"
        room_goto(rGame)
    }
    
    if button_pressed("Quit") {
        game_end()
    
    }
} else if mode == "Game" {
    
    if instance_exists(oPlayer) {

        // Draw power bar
        bar_indent = 50
        bar_width = view_wport - (bar_indent * 2)
        bar_height = 20
        bar_top = (view_hport - bar_indent) - bar_height
        
        power_fraction = oPlayer.power_current / oPlayer.power_max
        
        draw_set_color(c_green)
        draw_set_alpha(0.7)
        draw_rectangle(bar_indent, bar_top, (bar_indent + bar_width), (bar_top + bar_height), true)
        draw_rectangle(bar_indent, bar_top, (bar_indent + bar_width*power_fraction), (bar_top + bar_height), false)
        draw_set_alpha(1)
    
    }

}
